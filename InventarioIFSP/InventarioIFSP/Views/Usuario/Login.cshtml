
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@{
    if (TempData["msg"] != null)
    {
        <div class="alert alert-@TempData["msg_type"]">@TempData["msg"]</div>
    }

}
<div class="row">
    <div class="col-md-6 col-md-offset-4">
        <br />
        <form action="/LoginPost" method="post">
            <label for="username">Nome de usuário</label>
            <input type="text" name="login" value="" placeholder="Email ou Prontuário" class="form-control"/>
            <label for="password">Senha</label>
            <input type="password" name="senha" value="" placeholder="Senha" class="form-control"/>
            <button class="btn btn-primary" type="submit">Enviar</button>
            <button class="btn btn-default" type="reset">Limpar</button>
        </form>
    </div>
</div>

