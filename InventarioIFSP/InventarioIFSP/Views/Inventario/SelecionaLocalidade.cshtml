@using InventarioIFSP.Models;
@{
    ViewBag.Title = "Selecionar localização";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> lista = TempData["localidades"] as List<SelectListItem>;
}

<div class="row justify-content-center">
    <h2>@ViewBag.Title</h2>
</div>

@{
    if (TempData["msg"] != null)
    {
        <div class="alert alert-@TempData["msg_type"] text-center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            @TempData["msg"]
        </div>
    }
}
    <div class="row justify-content-center text-center">
        <div class="col-4">

            @using (Html.BeginForm("Update", "Inventario", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <label for="campo-busca"> Buscar por nome ou bloco</label>
                @Html.DropDownList("ID", lista, new { @class = "form-control" })

                <br/>
                <div class="form-group">
                    <input type="submit" value="Ir" class="btn btn-primary btn-block" />
                </div>
            }
        </div>
    </div>
    